{
  "name": "@a11ywatch/core",
  "version": "0.5.7",
  "description": "a11ywatch central api",
  "main": "./server.js",
  "scripts": {
    "dev": "ts-node-dev --transpile-only -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "lint": "eslint .",
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/server.js",
    "pub": "tsc && tsc-alias && cp package.json dist && cp package-lock.json dist && cp README.md dist && cp LICENSE dist && cd dist && npm publish"
  },
  "dependencies": {
    "@a11ywatch/protos": "^0.3.1",
    "@a11ywatch/website-source-builder": "^0.0.31",
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/rate-limit": "^6.0.1",
    "@graphql-tools/schema": "^8.5.1",
    "@grpc/grpc-js": "1.6.7",
    "@grpc/proto-loader": "0.7.0",
    "apollo-server": "3.10.0",
    "apollo-server-core": "3.10.0",
    "apollo-server-fastify": "^3.10.1",
    "cron": "2.1.0",
    "date-fns": "2.29.1",
    "exceljs": "^4.3.0",
    "fastify": "^3.29.1",
    "fastq": "^1.13.0",
    "graphql": "^15.5.0",
    "graphql-middleware": "^6.1.32",
    "graphql-rate-limit": "^3.3.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "2.12.6",
    "graphql-ws": "^5.10.0",
    "ioredis": "^5.2.2",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.7.3",
    "node-iframe": "^1.8.4",
    "nodemailer": "6.7.7",
    "pb-util": "^1.0.3",
    "stripe": "7.14.0",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "2.2.2",
    "@swc/core": "^1.2.207",
    "@swc/jest": "^0.2.21",
    "@types/ioredis": "^4.28.8",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.45",
    "@types/nodemailer": "^6.4.4",
    "@types/stripe": "^7.0.0",
    "@types/universal-analytics": "^0.4.5",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "apollo-server-testing": "^2.25.3",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^8.5.0",
    "ioredis-mock": "^8.2.2",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "1.6.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "keywords": [
    "accessibility",
    "testing",
    "WCAG"
  ],
  "cacheDirectories": [
    "./node_modules/.cache/mongodb-memory-server/mongodb-binaries"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "src/**/*.test.ts",
      "dist",
      "coverage",
      "node_modules"
    ]
  },
  "config": {
    "mongodbMemoryServerOptions": {
      "binary": {
        "version": "3.7.3",
        "skipMD5": true
      },
      "instance": {
        "dbName": "a11ywatch"
      },
      "autoStart": true
    }
  }
}
